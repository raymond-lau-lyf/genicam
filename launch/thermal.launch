<launch>
    <arg name="thermal_name" default="None" />
    <arg name="camera_ip" default="" />
    <arg name="identify_str" default="None" />
    <arg name="publish_topic" default="None" />
    <arg name="externalsync" default="None" />
    <arg name="retry_count" default="5" />
    <arg name="retry_delay_ms" default="500" />
    <node name="$(arg thermal_name)_node" pkg="genicam" type="genicam_node" output="screen" >
        <param name="publish_topic" type="string" value="$(arg publish_topic)"/>
        <!-- IP 直连模式（推荐）-->
        <param name="camera_ip" type="string" value="$(arg camera_ip)"/>
        <!-- 兼容模式：设备扫描匹配 -->
        <param name="identify_str" type="string" value="$(arg identify_str)"/>
        <!-- 重试配置 -->
        <param name="retry_count" type="int" value="$(arg retry_count)"/>
        <param name="retry_delay_ms" type="int" value="$(arg retry_delay_ms)"/>
        <!-- 开启PTP同步之后可以使用device时间 -->
        <param name="use_device_time" type="bool" value="False" />
        <param name="gev_packet_size" type="int" value="8228" />
        <param name="vis_img" type="bool" value="False"/>
        <param name="externalsync" type="bool" value="$(arg externalsync)"/>
        <param name="pixel_format" type="string" value="YUV422_8" />
        <!-- Palette:IronRed比较好看, WhiteHot比较稳定 -->
        <!-- <param name="palette" type="string" value="WhiteHot" />  -->
        <param name="palette" type="string" value="IronRed" />

    </node>
</launch>